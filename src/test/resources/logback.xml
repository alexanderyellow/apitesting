<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} |-%-5level in %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<appender name="RP" class="com.epam.reportportal.logback.appender.ReportPortalAppender">
        <encoder>
            &lt;!&ndash;&lt;!&ndash;Best practice: don't put time and logging level to the final message. Appender do this for you&ndash;&gt;&ndash;&gt;
            <pattern>%d{HH:mm:ss.SSS} [%t] %-5level - %msg%n</pattern>
            <pattern>[%t] - %msg%n</pattern>
        </encoder>
    </appender>-->

     'additivity' flag is important! Without it logback will double-log log messages
    <logger name="binary_data_logger" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="DEBUG" level="TRACE" additivity="false">
        <!--<appender-ref ref="RP"/>-->
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- By default, the level of the root level is set to DEBUG -->
    <root level="DEBUG">
        <!--<appender-ref ref="RP"/>-->
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>